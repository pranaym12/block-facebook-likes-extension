{
	"manifest_version": 2,
	"name": "Hide Facebook Likes",
	"version": "1.0",
	"description": "Hides other people's likes from your Facebook for a better experience.",
	"permissions": ["*://*.facebook.com/*"],
	"content_scripts": [
		{
			"matches": ["*://*.facebook.com/*"],
			"js": ["jquery-3.3.1.min.js","content.js"],
			"css": ["content.css"],
			"run_at": "document_end"
		}
	],
	"icons": {
		"128": "icon128.png",
		"48": "icon48.png",
		"16": "icon16.png"
	},
	"browser_action": {
		"default_icon": "icon16.png",
		"default_title": "Hide Facebook Likes",
		"default_popup": "popup.html"
	},
	"background": {
		"scripts": ["eventPage.js"],
		"persistent": false
	},
	"permissions": [
		"storage"
	]
}